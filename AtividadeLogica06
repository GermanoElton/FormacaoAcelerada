Aprovados A = 0
Aprovados B = 0
Aprovados C = 0
Aprovados D = 0

Repita (contador <100) faça
Escreva ("Qual sua turma?")
leia ("turma")

se (turma = A)
Escreva ("Qual seu nome?")
leia ("Nome")
Alunos A ++
Escreva ("Qual sua nota?")
leia ("nota A")
   se (nota A >=7)
   Aprovados A ++
   Escreva (turma)

se (turma = B)
Escreva ("Qual seu nome?")
leia ("Nome")
Alunos B ++
Escreva ("Qual sua nota?")
leia ("nota B")
   se (nota B >=7)
   Aprovados B ++
   Escreva (turma)

se (turma = C)
Escreva ("Qual seu nome?")
leia ("Nome")
Alunos C ++
Escreva ("Qual sua nota?")
leia ("nota C")
   se (nota C >=7)
   Aprovados C ++
   Escreva (turma)

se (turma = D)
Escreva ("Qual seu nome?")
leia ("Nome")
Alunos D ++
Escreva ("Qual sua nota?")
leia ("nota D")
   se (nota D >=7)
   Aprovados D ++
   Escreva (turma)

fimenquanto

Repita (Alunos A =0) faça
se (nota A> MaiorNotaA) MaiorNotaA = nota A
Alunos -1
fimenquanto

